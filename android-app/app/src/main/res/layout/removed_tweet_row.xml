<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:clickable="true"
    android:elevation="4dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    android:id="@+id/card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/tweet_by_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            fontPath="fonts/SignikaNegative-Regular.ttf"
            android:text="TWEET BY  :   " />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            fontPath="fonts/SignikaNegative-SemiBold.ttf"
            android:layout_toRightOf="@id/tweet_by_text" />



        <TextView
            android:text="TYPE            :   "
            android:textSize="16sp"
            android:paddingBottom="10dp"
            fontPath="fonts/SignikaNegative-Regular.ttf"
            android:layout_below="@id/user_name"
            android:id="@+id/prediction_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/user_name"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            fontPath="fonts/SignikaNegative-SemiBold.ttf"
            android:layout_toRightOf="@id/prediction_type_text"
            android:id="@+id/prediction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/prediction_status"
            android:id="@+id/tweet_message"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            fontPath="fonts/SignikaNegative-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/tweet_message"
            android:id="@+id/text"
            android:textSize="16sp"
            android:text="ANSWER     :    "
            android:paddingBottom="10dp"
            fontPath="fonts/SignikaNegative-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/text"
            android:layout_below="@id/tweet_message"
            android:id="@+id/tweet_answer"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            fontPath="fonts/SignikaNegative-SemiBold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</android.support.v7.widget.CardView>